<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Business Contacts List </h3>
          
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <div class="clearfix"><a href="/businessContacts/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a Business COntact</a></div>          
          <br>
          <div class="clearfix"></div>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th class="text-center">Number</th>
                  <th class="text-center">Email</th>
             
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < businessContacts.length; count++) { %>
                <tr>
                 
                  <td class="text-center">$<%= businessContacts[count].Name %></td>
                  <td class="text-center"><%= businessContacts[count].Number %></td>
                  <td class="text-center"><%= businessContacts[count].Email %></td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- ADD the EDIT BUTTON HERE -->
                    <!-- ------------------------ -->
                     <a href="/businessContacts/<%= businessContacts[count]._id %>" class="btn btn-primary">
                    <i class="fa fa-pencil-square-o"></i> Update</a>
                  </td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- ADD the DELETE BUTTON HERE -->
                    <!-- ------------------------ -->
                    <a href="/businessContacts/delete/<%= businessContacts[count]._id %>" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


